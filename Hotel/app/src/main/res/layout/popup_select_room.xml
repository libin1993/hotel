<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="455dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_select_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:textColor="@color/gray_22"
                android:textSize="21sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_cancel_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="39dp"
                android:paddingRight="39dp"
                android:scaleType="center"
                android:src="@mipmap/ic_cancel_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_select_room"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_select_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:textColor="@color/gray_55"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_select_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="39dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_next"/>


            <TextView
                android:id="@+id/tv_select_room_mo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/iv_select_room"
                android:textColor="@color/gray_55"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:background="@color/gray_ee"/>

        <LinearLayout
            android:id="@+id/ll_select_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:text="登记入住人数"
                android:textColor="@color/gray_55"
                android:textSize="18sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_select_num"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="14.5dp"
                android:layout_marginRight="27dp">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="23.5dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_room_check"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>