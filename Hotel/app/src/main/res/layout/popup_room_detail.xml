<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:paddingLeft="36dp"
            android:paddingRight="50dp"
            android:scaleType="center"
            android:src="@mipmap/btn_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/gray_ee"/>

        <TextView
            android:id="@+id/tv_room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="36dp"
            android:textColor="@color/gray_22"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_bed_num"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_55"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_register_num"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_55"
            android:textSize="18sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_monitor_num"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_55"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_security_status"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_55"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/tv_smoke_status"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_55"
            android:textSize="18sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="39dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_check_in"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/bg_room_check"
                android:text="入住"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_edit_room"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/bg_room_edit"
                android:text="修改"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_check_out"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_room_check"
                android:text="退房"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>